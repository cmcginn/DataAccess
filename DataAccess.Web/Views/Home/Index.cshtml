<script type="text/html" id="cities-template">
    <div data-bind="foreach:cities" class="cities">

        <div class="ym-gl ym-g25">
            <div class="ym-grid">
                <div class="ym-gl ym-g20">
                    <input type="checkbox" data-bind="checked:selected" />
                </div>
                <div class="ym-gl ym-g80">
                    <div>
                        <span data-bind="text:name"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
<script id="states-template" type="text/html">
    <div data-bind="foreach:states">
        <div class="state ym-grid">
            <h1 data-bind="click:selected"><span style="padding-left: 15px" data-bind="text:name"></span></h1>
            <div class="content" data-bind="attr:{'data-code':code}">
                <div style="width: 100%; height: 50px">
                    <div style="width: 16px; margin: auto">
                        <img src="/Content/images/ajax-loader.gif" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
<div class="ym-grid">
    <div class="ym-gr ym-g20">
        <button id="btn_save">Save</button>
    </div>
</div>
<div data-bind="with:profileQuery">
    <div>
        <input id="profile_query_name" type="text" data-bind="value:name" />
    </div>
    <div>
        <div class="ym-grid">
            <div class="ym-gl ym-g50">
                <input type="text" id="new_phrase" data-bind="value:$parent.newPhrase.value" />
            </div>
            <div class="ym-gl ym-g25">
                <input type="text" id="new_phrase_score" data-bind="value:$parent.newPhrase.score"/>
            </div>
            <div class="ym-gl ym-g25">
                <button type="button" id="btn_add_phrase" data-bind="click:function(){index.addPhrase($parent.newPhrase)}" />
            </div>
        </div>
        <div data-bind="foreach:phrases">
            <div class="ym-grid" data-bind="if:selected">
            <div class="ym-gl ym-g25"><span data-bind="text:value"></span></div>
            <div class="ym-gl ym-g25"><span data-bind="text:score"></span></div>
                <div class="ym-gl  ym-g25">
                    <button class="phrase-remove" data-bind="click:function(){index.removePhrase($data)}"></button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="states" data-bind="template:{name:'states-template'}"></div>
