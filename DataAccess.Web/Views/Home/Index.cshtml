<script type="text/html" id="cities-template">
    <div data-bind="foreach:cities" class="cities">

        <div class="ym-gl ym-g25">
            <div class="ym-grid">
                <div class="ym-gl ym-g20">
                    <input type="checkbox" />
                </div>
                <div class="ym-gl ym-g80">
                    <div>
                        <span data-bind="text:name"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
<script id="states-template" type="text/html">
    <div data-bind="foreach:States">
        <div class="state ym-grid" data-bind="click:selected">
            <h1><span style="padding-left: 15px" data-bind="text:name"></span></h1>
            <div class="content" data-bind="attr:{'data-id':id}">
                <div style="width:100%;height:50px">
                    <div style="width:16px;margin:auto">
                        <img src="/Content/images/ajax-loader.gif" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<div id="states" data-bind="template:{name:'states-template'}"></div>
